---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

<h1
  id="hero-title"
  class="text-4xl leading-11 font-bold text-center max-w-xl mx-5 sm:mx-auto text-primary"
>
  {title}
</h1>

<script>
  import { gsap } from "gsap";
  const title = document.querySelector("#hero-title");

  function init() {
    gsap.fromTo(
      title,
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 1, ease: "power2.out" }
    );
  }
  function main() {
    init();
  }

  document.addEventListener("DOMContentLoaded", main);
</script>
