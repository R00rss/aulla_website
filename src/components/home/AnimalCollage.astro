<section class="wrapper-animal-collage relative">
  <section class="overflow-hidden mt-10 content-animal-collage relative">
    <section class="flex px-7 sm:px-0 justify-start 3xl:justify-center items-center gap-10">
      {
        animals.map((animal, index) => (
          <AnimalCard
            title={animal.name}
            description="Max es un perro juguetÃ³n y amigable que busca un hogar lleno de amor."
            date="Disponible desde: 2023-10-01"
            rotateLeft={index % 2 === 0}
            image={animal.image}
          />
        ))
      }
    </section>
  </section>
</section>

