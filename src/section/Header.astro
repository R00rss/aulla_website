---
import BrandIcon from "@/components/header/BrandIcon.astro";
import MenuMobile from "@/components/header/Mobile/MenuMobile.astro";
import NavigationItemsMobile from "@/components/header/Mobile/NavigationItemsMobile.astro";
import NavigationItems from "@/components/header/NavigationItems.astro";
import SupportItems from "@/components/header/SupportItems.astro";
---

<header class="mx-auto max-w-7xl w-full fixed top-0 bg-light z-10 py-2">
  <main class="px-1 xs:px-2 md:px-10">
    <NavigationItems />
    <MenuMobile />
    <BrandIcon />
    <SupportItems />
  </main>
</header>

<style>
  main {
    display: grid;
    grid-template-columns: 1fr max-content 1fr;
  }
</style>
